<% provide(:title, "Edit user") %> 
<br>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
	
      <h1>Update<br>profile</h1>
<p>Enter password and
<br>password confirmation
<br>to save changes</p>

    </div>
    <div class="span6">
<br>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :fullname %>
      <%= f.text_field :fullname %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :twittername %>
      <%= f.text_field :twittername %>

      <%= f.label "Year of Your Birth" %>
      <%= f.text_field :yob %>
<br>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

 
  </div>
</div>