<h1>Tell us your dilemma, share....</h1>
<%= form_for(@dilemma) do |f| %>
  <% if @dilemma.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dilemma.errors.count, "error") %> prohibited this dilemma from being saved:</h2>
      	<ul>
      		<% @dilemma.errors.full_messages.each do |msg| %>
        	<li><%= msg %></li>
      		<% end %>
      	</ul>
    </div>
  <% end %>
 
<div class="row">
  <div class="span7 offset3">
	
   <div class="field">
	<il><strong>What is your dilema?</strong><br>
  	<%= f.text_area :dilemma, :size => "120x4", :value => "Write your dilemma here. Remember to make it a Yes or No question and please don't be offensive or we might have to close your account." %>
  </div>
  <div class="field">
	<il><strong>How long do your followers have to vote?</strong>
	<%= select( "title", "id", { "a day" => "1", "a week" => "2", "a month" => "3"}) %>
  </div>

 <div class="field">
    <%= f.label "Answer Style: (other options will be added in the future)" %>
	<%= select( "ans_opt", "id", { "Yes_No" => "1", "EnterOptions" => "2", "EnterAList" => "3"}) %>
  </div>
  <div class="actions">
    <%= f.submit :class =>'btn btn-mini btn-info'%>
  </div>
</div>

<% end %>
